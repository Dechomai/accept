{
  "name": "accept-pay",
  "version": "0.0.0",
  "main": "app.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "start": "nodemon app.js",
    "start:debug": "cross-env DEBUG=express:* nodemon app.js",
