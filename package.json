{
  "name": "accept-pay",
  "version": "0.0.0",
  "main": "app.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "stylelint": "stylelint ./client/src/**/*.scss",
    "test": "jasmine",
    "start": "nodemon app.js",
    "start:debug": "cross-env DEBUG=express:* nodemon app.js",
    "build:client":
      "rimraf ./public/* && cd ./client && yarn && yarn build && ncp ./build ../public",
    "cognito:upload:customization": "node scripts/cognitoUploadCustomization.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "eslint --fix", "git add"],
    "*.scss": ["prettier --write", "stylelint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "nodemonConfig": {
    "ignore": ["client/*", "public/*"]
  },
  "dependencies": {
    "aws-sdk": "^2.217.1",
    "cloudinary": "^1.11.0",
    "cognito-express": "^2.0.9",
    "compression": "^1.7.2",
    "convict": "^4.1.0",
    "cookie-parser": "^1.4.3",
    "db-migrate": "^0.11.1",
    "db-migrate-mongodb": "^1.4.0",
    "dotenv": "^5.0.1",
    "ethereumjs-tx": "^1.3.4",
    "express": "^4.16.3",
    "express-validator": "^5.0.3",
    "helmet": "^3.12.0",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^5.0.11",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "node-fetch": "^2.1.1",
    "ramda": "^0.25.0",
    "uuid": "^3.2.1",
    "validator": "^9.4.1",
    "web3": "0.20.6",
    "winston": "^2.4.1",
    "winston-aws-cloudwatch": "^2.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "eslint": "^4.19.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jasmine": "^3.1.0",
    "jasmine-console-reporter": "^3.0.0",
    "lint-staged": "^7.0.0",
    "ncp": "^2.0.0",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "stylelint": "^9.2.0"
  }
}
