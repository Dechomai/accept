  "dependencies": {
    "cognito-express": "^2.0.9",
    "compression": "^1.7.2",
    "convict": "^4.1.0",
    "cookie-parser": "^1.4.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "helmet": "^3.12.0",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^5.0.11",
    "morgan": "^1.9.0",
    "node-fetch": "^2.1.1",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "eslint": "^4.19.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "ncp": "^2.0.0",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2"
  }
